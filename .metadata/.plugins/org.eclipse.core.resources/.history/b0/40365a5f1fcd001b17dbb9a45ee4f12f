package xyz.elandasunshine.cvm;

import org.apache.logging.log4j.Logger;

/**
 *  The ICvmManager interface is the base
 *  @author elanda
 */
public interface ITargetManager
{
	//==================================================================================================================
	enum VmTarget
	{
		/** Determines that this manager instance regards both, the server and the client version of the VM. */
		TWOWAY,
		
		/** Determines that this manager instance only regards the server version of the VM. */
		SERVER,
		
		/** Determines that this manager instance only regards the client version of the VM. */
		CLIENT
	}
	
	//==================================================================================================================
	 /** The name of this VM version */
	String PROJECT_NAME = "Cubeit VM Alpha";
	
	/** The version of this project */
	String PROJECT_VERSION = "0.1.0";
	
	/** The vendor of this project */
	String PROJECT_VENDOR = "ElandaSunshine";
	
	//==================================================================================================================
	/** 
	 * Gets the target of this VM instance, this can only be one of three: TwoWay, Server or Client.
	 * @return The target type
	 */
	VmTarget getVmTarget();
	
	//==================================================================================================================
	/** Setup resources and registers before the actual VM initialisation. */
	void setupVm();
	
	/** Initialise the VM and register all the things needed to run it. */
	void inititialiseResources();
	
	/** Anything that happens after VM initialisation can be done here. */
	void loadResources();
		
	//==================================================================================================================
	/** The logger for this VM instance. */
	Logger getLogger();
	
	
}